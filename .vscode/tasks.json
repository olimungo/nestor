{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload",
            "type": "shell",
            "command": "kill $(pgrep -f mpfshell); cd ${fileDirname}; mpfshell -n -c 'open tty.usbserial-1430; mput ${fileBasename}'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "echo ${fileDirname}",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload All",
            "type": "shell",
            "command": "kill $(pgrep -f mpfshell); cd ${fileDirname}; mpfshell -n -c 'open tty.usbserial-1430; mput .*\\.py; mput index.html; mput broker.txt'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Erase flash",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1430 erase_flash",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash ESP with micropython",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1430 --baud 460800 write_flash --flash_size=detect 0 esp8266-20190529-v1.11.bin",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash ESP with custom micropython",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1430 --baud 460800 write_flash --flash_size=detect 0 firmware-combined.bin",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Shell and REPL",
            "type": "shell",
            "command": "kill $(pgrep -f mpfshell); cd ${fileDirname}; mpfshell -c open tty.usbserial-1430",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        }
    ]
}
