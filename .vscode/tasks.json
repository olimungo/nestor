    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload",
            "type": "shell",
            "command": "pkill mpfshell; cd ${fileDirname}; mpfshell -n -c 'open ${env:MICROCONTROLLER_USB_PORT}; mput ${fileBasename}'",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Upload All",
            "type": "shell",
            "command": "pkill mpfshell; cd ${fileDirname}; mpfshell -n -c 'open ${env:MICROCONTROLLER_USB_PORT}; mput .*\\.py; mput index.html; mput style.css; mput scripts.js'",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Build custom micropython v1.14",
            "type": "shell",
            "command": "cd micropython-build; docker build -f Dockerfile -t micropython .; docker run -d --name=micropython micropython; docker cp micropython:/micropython/ports/esp8266/build-GENERIC/firmware-combined.bin ..; docker rm -f micropython; docker rmi -f micropython",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase and flash ESP with custom micropython",
            "type": "shell",
            "command": "pkill mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} --baud 460800 write_flash --flash_size=detect 0 firmware-combined.bin",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase ESP",
            "type": "shell",
            "command": "pkill mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase and Flash ESP with micropython 1.14",
            "type": "shell",
            "command": "pkill mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} --baud 460800 write_flash --flash_size=detect 0 esp8266-20210202-v1.14.bin",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Flash ESP with custom micropython",
            "type": "shell",
            "command": "pkill mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} --baud 460800 write_flash --flash_size=detect 0 firmware-combined.bin",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Shell and REPL",
            "type": "shell",
            "command": "pkill mpfshell; cd ${fileDirname}; mpfshell -c open ${env:MICROCONTROLLER_USB_PORT}",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        }
    ]
}