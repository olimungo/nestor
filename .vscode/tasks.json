{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; cd ${fileDirname}; mpfshell -n -c 'open ${env:MICROCONTROLLER_USB_PORT}; mput ${fileBasename}'",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Upload All",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; cd ${fileDirname}; mpfshell -n -c 'open ${env:MICROCONTROLLER_USB_PORT}; mput (?!^.DS_Store$)(^.*$); lcd ../common; mput (?!^.DS_Store$)(^.*$)'",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Build custom micropython",
            "type": "shell",
            "command": "cd micropython-build; docker build -f Dockerfile.from-scratch -t micropython .; docker run -d --name=micropython micropython bash; docker cp micropython:/micropython/ports/esp8266/build-GENERIC/firmware-combined.bin firmware.bin; docker rm -f micropython; docker system prune -f",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase and flash ESP with custom micropython",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} --baud 460800 write_flash --flash_size=detect 0 micropython-build/firmware.bin",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase and flash ESP with v1.18 micropython",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} --baud 460800 write_flash --flash_size=detect 0 micropython-build/v1.18.bin",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Erase ESP",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; esptool.py --port /dev/${env:MICROCONTROLLER_USB_PORT} erase_flash",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Shell and REPL",
            "type": "shell",
            "command": "${env:PKILL_CMD} mpfshell; cd ${fileDirname}; /usr/local/bin/mpfshell -c open ${env:MICROCONTROLLER_USB_PORT}",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        }
    ]
}
