{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload",
            "type": "shell",
            "command": "pkill -f mpfshell; cd ${fileDirname}; mpfshell -n -c 'open tty.usbserial-1460; mput ${fileBasename}'",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Upload All",
            "type": "shell",
            "command": "pkill -f mpfshell; cd ${fileDirname}; mpfshell -n -c 'open tty.usbserial-1460; mput .*\\.py; mput index.html'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build custom micropython",
            "type": "shell",
            "command": "cd micropython-build; docker build -t micropython .; docker run -d --name=micropython micropython; docker cp micropython:/micropython/ports/esp8266/build-GENERIC/firmware-combined.bin ..; docker rm -f micropython; docker rmi -f micropython",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Erase and flash ESP with custom micropython",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1460 erase_flash; esptool.py --port /dev/tty.usbserial-1460 --baud 460800 write_flash --flash_size=detect 0 firmware-combined.bin",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Erase ESP",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1460 erase_flash",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash ESP with micropython",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1460 --baud 460800 write_flash --flash_size=detect 0 esp8266-20191220-v1.12.bin",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash ESP with custom micropython",
            "type": "shell",
            "command": "esptool.py --port /dev/tty.usbserial-1460 --baud 460800 write_flash --flash_size=detect 0 firmware-combined.bin",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Shell and REPL",
            "type": "shell",
            "command": "pkill -f mpfshell; cd ${fileDirname}; mpfshell -c open tty.usbserial-1460",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        }
    ]
}
